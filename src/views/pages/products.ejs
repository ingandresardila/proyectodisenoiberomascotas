<div class="products-page">
    <!-- BIENVENIDA CON NOMBRE DE USUARIO EN SUPERIOR DERECHA -->
    <div class="user-welcome-container mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="mb-1">Artículos para tus mascotas</h2>
                <p class="text-muted mb-0">Encuentra todo lo que necesitan tus mejores amigos</p>
            </div>
            <div class="col-md-4 text-end">
                <% if (usuario) { %>
                <div class="user-info-box">
                    <i class="fas fa-user-circle fa-2x me-2"></i>
                    <div class="user-details">
                        <span class="user-greeting">¡Hola,</span>
                        <span class="user-name"><%= usuario.nombre %>!</span>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- BOTONES DE FILTROS REDONDOS (sin los filtros anteriores) -->
    <div class="container mb-4">
        <div class="filtros-nuevos-container">
            <div class="row justify-content-center mb-3">
                <div class="col-auto">
                    <button class="btn-filtro-nuevo adulto">
                        <i class="fas fa-dog"></i> Adulto
                    </button>
                </div>
                <div class="col-auto">
                    <button class="btn-filtro-nuevo disfraces">
                        <i class="fas fa-tshirt"></i> Disfraces
                    </button>
                </div>
                <div class="col-auto">
                    <button class="btn-filtro-nuevo accesorios">
                        <i class="fas fa-crown"></i> Accesorios
                    </button>
                </div>
            </div>
            
            <!-- BUSCADOR CON LUPA -->
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="buscador-container-nuevo">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-search"></i>
                            </span>
                            <input type="text" 
                                   class="form-control buscador-input-nuevo" 
                                   placeholder="¿Qué necesita tu mascota?">
                            <button class="btn btn-buscar-nuevo">Buscar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- PRODUCTOS -->
    <div class="container">
        <div class="row">
            <% productos.forEach(producto => { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card producto-card">
                    <div class="producto-imagen">
                        <div class="imagen-placeholder">
                            <i class="fas fa-paw fa-3x"></i>
                            <p class="mt-2"><%= producto.categoria %></p>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="producto-title"><%= producto.nombre %></h5>
                        <p class="producto-desc"><%= producto.descripcion %></p>
                        <div class="producto-meta">
                            <span class="badge tipo-badge"><%= producto.tipo %></span>
                            <span class="badge categoria-badge"><%= producto.categoria %></span>
                        </div>
                        <div class="producto-precio">
                            <h4 class="text-primary">$<%= producto.precio.toLocaleString() %></h4>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-agregar-carrito" 
                                data-id="<%= producto.id %>"
                                data-nombre="<%= producto.nombre %>"
                                data-precio="<%= producto.precio %>">
                            <i class="fas fa-cart-plus"></i> Agregar al carrito
                        </button>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <!-- BANNER DESCARGA APP -->
    <div class="container mt-5">
        <div class="app-banner-nuevo">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h3 class="banner-title">
                        <i class="fas fa-mobile-alt me-2"></i>
                        Descarga nuestra app
                    </h3>
                    <p class="banner-text">
                        y disfruta una experiencia más completa junto a tu mascota.
                    </p>
                </div>
                <div class="col-md-4">
                    <div class="d-flex gap-2 justify-content-end">
                        <button class="btn-app-download app-store">
                            <i class="fab fa-apple"></i> App Store
                        </button>
                        <button class="btn-app-download google-play">
                            <i class="fab fa-google-play"></i> Google Play
                        </button>
                        <button class="btn-app-download app-gallery">
                            <i class="fas fa-mobile-alt"></i> App Gallery
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación -->
<div class="modal fade" id="modalCarrito" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">¡Producto agregado!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="modalMensaje">El producto ha sido agregado a tu carrito.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Seguir comprando</button>
                <a href="/checkout" class="btn btn-primary">Ir al carrito</a>
            </div>
        </div>
    </div>
</div>

