<script>
// Agregar al carrito con AJAX
document.querySelectorAll('.btn-agregar-carrito').forEach(button => {
    button.addEventListener('click', function() {
        const productId = this.getAttribute('data-id');
        const productName = this.getAttribute('data-nombre');
        
        // Enviar al servidor
        fetch('/agregar-carrito', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                productoId: productId,
                cantidad: 1
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Mostrar modal
                document.getElementById('modalMensaje').textContent = 
                    `"${productName}" ha sido agregado al carrito.`;
                
                const modal = new bootstrap.Modal(document.getElementById('modalCarrito'));
                modal.show();
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error al agregar al carrito');
        });
    });
});

// Buscador
document.querySelector('.btn-buscar-nuevo').addEventListener('click', function() {
    const query = document.querySelector('.buscador-input-nuevo').value.trim();
    if (query) {
        alert(`Buscando productos: "${query}"`);
        // Aquí implementarías la búsqueda real
    }
});

// Botones de filtro
document.querySelectorAll('.btn-filtro-nuevo').forEach(button => {
    button.addEventListener('click', function() {
        const filtro = this.textContent.trim();
        alert(`Filtrando por: ${filtro}`);
        // Aquí implementarías el filtrado real
    });
});

// Botones de descarga app
document.querySelectorAll('.btn-app-download').forEach(button => {
    button.addEventListener('click', function() {
        const app = this.textContent.trim();
        alert(`Redirigiendo a ${app}`);
    });
});
</script>
